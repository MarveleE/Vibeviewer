        <language>en</language>
        
        <!-- 
            添加新版本时，将新的 <item> 放在最前面（最新版本在顶部）
            每次发布新版本时，需要：
            1. 运行 ./Scripts/sign_dmg.sh Vibeviewer-X.X.X.dmg X.X.X 获取签名
            2. 更新以下字段：
               - sparkle:version 和 sparkle:shortVersionString
               - pubDate（发布日期）
               - url（GitHub Releases 下载链接）
               - length（DMG 文件大小，字节）
               - sparkle:edSignature（从签名脚本获取，Ed25519 签名）
            3. 更新 sparkle:releaseNotesLink 指向 GitHub Release 页面
        -->
        
        <!-- 版本 1.1.8 -->
        <item>
            <title>Version 1.1.8</title>
            <sparkle:releaseNotesLink>https://github.com/MarveleE/Vibeviewer/releases/tag/v1.1.8</sparkle:releaseNotesLink>
            <pubDate>Sun, 09 Nov 2025 09:49:26 +0000</pubDate>
            <enclosure url="https://github.com/MarveleE/Vibeviewer/releases/download/v1.1.8/Vibeviewer-1.1.8.dmg"
                       sparkle:version="1.1.8"
                       sparkle:shortVersionString="1.1.8"
                       length="0"
                       type="application/octet-stream"
                       sparkle:edSignature=""/>
        </item>
